{% extends 'base.html.twig' %}

{% block body %}
    <h1>{{ 'customer_bundle.title_index'|trans }}</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Customertype</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Companyname</th>
                <th>Siret</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for customer in customers %}
            <tr>
                <td><a href="{{ path('customer_show', { 'id': customer.id }) }}">{{ customer.id }}</a></td>
                <td>{{ customer.customerType }}</td>
                <td>{{ customer.firstName }}</td>
                <td>{{ customer.lastName }}</td>
                <td>{{ customer.companyName }}</td>
                <td>{{ customer.siret }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('customer_show', { 'id': customer.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('customer_edit', { 'id': customer.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('customer_new') }}">Create a new customer</a>
        </li>
    </ul>
{% endblock %}
